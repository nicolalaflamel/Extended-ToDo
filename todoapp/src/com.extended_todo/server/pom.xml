        </dependency>
        <dependency>
            <groupId>io.github.nif</groupId>
            <artifactId>common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.canoo.dolphin-platform</groupId>
            <artifactId>dolphin-platform-spring-controller-tester</artifactId>
            <version>${dolphin-platform.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>1.2.2.RELEASE</version>
                <configuration>
                    <mainClass>io.github.nif.com.extended_todo.ServerApplication</mainClass>
                </configuration>
            </plugin>
        </plugins>
